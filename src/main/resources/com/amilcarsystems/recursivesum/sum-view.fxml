<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.amilcarsystems.recursivesum.controller.SumController"
            prefWidth="400" prefHeight="200">

    <children>
        <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="30"
              prefWidth="300" prefHeight="140">

            <Label text="Recursive Sum Calculator" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <TextField fx:id="inputField" promptText="Enter a number"/>

            <Button fx:id="calculateButton" text="Calculate" onAction="#handleCalculate"/>

            <Label fx:id="resultLabel" text="Result will appear here"/>
        </VBox>
    </children>
</AnchorPane>